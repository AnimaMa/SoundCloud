.all-albums
    display: flex
    flex-wrap wrap

    .album
        flex 0 0 25%
        display: flex

        .left
            flex 0 0 60%



        .right
            flex 0 0 40%
            display: flex
            flex-direction: column
            padding-left: 10px
            justify-content space-between
            align-content space-between

            .h2
                color $mediumBlue




            .details
                display: flex
                flex-direction: column
                position: relative
                bottom 0

                .author
                    color $lightdark
                    font-size 18px

                .date
                    color $tt
                    font-size 13px


        .&:nth-child(2)
            background-color $lightgrey