.album-table
    border 1px solid lightblue
    display flex
    padding 30px 0
    padding-right 30px
    padding-left 30px
    margin-right: 30px
    margin-left: 30px
    box-shadow: 20px 5px 55px 55px rgba(95, 144, 199, 0.05)

    tbody
        display: flex;
        flex-direction: column;

    th,td
        padding-right 30px
        flex 1
        padding-top 5px
        padding-bottom: 5px

    th
        color: dodgerblue

    td,th
        border-bottom 1px solid lightblue

    .img-db
        width: 300px


    .album-name
        color darkslateblue
        font-size 18px
        font-weight: bold
        font2()
        line-height: 1.2

        &:hover
            opacity 0.5