.album-table
    border 1px solid lightblue
    display flex
    padding 30px 0
    padding-right 30px
    padding-left 30px
    box-shadow: 20px 5px 55px 55px rgba(95, 144, 199, 0.05)
    border-radius: 10px;
    width: 100%
    overflow-x:auto;

    tbody
        display: flex;
        flex-direction: column;
        width: 100%;

    th,td
        padding-right 30px
        text-align center
        padding-top: 20px
        padding-bottom: 10px


    tr
        min-height 70px
        width: 100%
        display: flex
        border-bottom 1px solid lightblue

    td,th
        flex 0 0 10%
        min-width: 100px;

    th
        color: dodgerblue

    .img-db
        max-width: 100px



    .album-name
        color $lightYellow
        font-size 19px
        font-weight: bold
        font2()
        line-height: 1.2

        &:hover
            opacity 0.5