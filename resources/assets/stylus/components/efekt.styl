.body-effect
    //overflow: hidden !important;
    //height: 100% !important;
    transition: background-color 900ms 250ms ease-in-out;
    position relative

.sections-holder
    position relative
    height 100%
    .section
        position: relative;
        overflow: hidden;
        height: 100%

        .media-holder
            position: absolute;
            left: 0;
            top: 0;
            overflow: hidden;
            width: 100%;
            height: 100%;
            background: lightblue

            -webkit-transform: scale(0.95, .92) translateZ(0px);
            -moz-transform: scale(0.95, .92) translateZ(0px);
            transform: scale(0.95, .92) translateZ(0px);
            backface-visibility: hidden;
            -webkit-backface-visibility: hidden;
            -webkit-transition: -webkit-transform 250ms ease-in-out;
            -moz-transition: -moz-transform 250ms ease-in-out;
            transition: transform 250ms ease-in-out

.sections-holder .active .media-holder {
    transition-delay: 1400ms;
    transform: scale(1, 1) translateZ(0px)
}

.media-holder
    &.active
           transform: scale(1, 1) translateZ(0px);
           transition all 0.4s
sections-holder
    &.trans
        transition: transform 700ms ease 500ms;
        backface-visibility: hidden;
        transform: translate3d(0px, -532px, 0px);


.media-holder
    .chan
        background-color #1f648b
        transition all 900ms 250ms ease-in-out

