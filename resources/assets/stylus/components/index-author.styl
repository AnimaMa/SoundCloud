.index-authors
    display: flex
    flex-wrap wrap
    margin-top: 20px

    .author
        height: 100px
        display: block
        flex 0 0 100%
        margin-bottom: 10px
        margin-right: 10px
        background-position center
        background-size cover
        position: relative
        z-index 0
        text-align center
        padding 20px 10px
        overflow: hidden

        &:before
            content ''
            background-color black
            opacity 0.7
            height: 100%
            width: 100%
            z-index 1
            position: absolute
            left: 0
            top: 0
            border: 0 solid transparent;
            transition border  0.5s

        .name
            display: block
            margin 0 auto
            font-size 22px
            font2()
            z-index: 3
            position: relative
            color white
        &:hover
            transform scale(0.97)
            .name
                opacity 0.4
                transition all 0.3s