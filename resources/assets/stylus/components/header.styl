
header
    position relative
    width 100%
    height 100px
    color $dark

    .logo
        height: 100%

        img
            width: 200px
            height: 100px


    .wrap
        height: 100%
        display: flex
        align-items center



    nav
        display flex
        align-items center
        height: 100%
        align-self flex-start
        a
            margin-right 15px
            color $lightbrown
            font-size 18px

            &:hover
                opacity 0.5

            &.active
                color $lightBlue
